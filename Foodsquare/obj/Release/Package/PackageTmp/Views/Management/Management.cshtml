@using Foodsquare.Models
@{
    ViewBag.Title = "Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Management</h2>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" href="#advertisements">Advertisement</a>
</ul>
<div id="myTabContent" class="tab-content">

    <div class="tab-pane fade active show" id="advertisements">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Advertisement Name</th>
                <th scope="col">Expiration Date</th>
                <th scope="col">User</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Advertisement item in ViewBag.ListAdvertisements)
            {
                <tr>
                    <th scope="row">@item.id</th>
                    <td>@item.name</td>
                    <td>@item.expiration</td>
                    <td>@item.username</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>



